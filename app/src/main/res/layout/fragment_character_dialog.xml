<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kks_bg"
    tools:context="com.example.pefpr.kahaniyonkashehar.fragments.CharacterDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.example.pefpr.kahaniyonkashehar.animations.GifView
                android:id="@+id/iv_character_dialog_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <com.example.pefpr.kahaniyonkashehar.customData.TektonProTextview
                android:id="@+id/tv_character_dialog_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.example.pefpr.kahaniyonkashehar.customData.TektonProTextview
                    android:id="@+id/tv_character_dialog_choice1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/browse_content_selector"
                    android:gravity="center"
                    android:text="Yes"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <com.example.pefpr.kahaniyonkashehar.customData.TektonProTextview
                    android:id="@+id/tv_character_dialog_choice2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/browse_content_selector"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>