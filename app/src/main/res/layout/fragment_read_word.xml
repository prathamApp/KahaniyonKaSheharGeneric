<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kks_bg"
    tools:context="com.example.pefpr.kahaniyonkashehar.fragments.ReadWordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:weightSum="4">

            <com.example.pefpr.kahaniyonkashehar.customData.TektonProTextview
                android:id="@+id/tv_read_word_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/edittext_corner"
                android:gravity="center"
                android:text="question"
                android:textSize="40sp" />

            <com.example.pefpr.kahaniyonkashehar.customData.TektonProTextview
                android:id="@+id/tv_read_word_answer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_corner"
                android:gravity="center"
                android:text="Answer"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <com.example.pefpr.kahaniyonkashehar.customData.TektonProButton
                    android:id="@+id/btn_read_word_mic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_icon_selector"
                    android:text="Record"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="20sp" />

                <com.example.pefpr.kahaniyonkashehar.customData.TektonProButton
                    android:id="@+id/btn_read_word_stop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_icon_selector"
                    android:text="Stop"
                    android:layout_weight="1"
                    android:textSize="20sp" />

            </LinearLayout>

            <com.example.pefpr.kahaniyonkashehar.customData.TektonProButton
                android:id="@+id/btn_read_word_next"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonyellowcolor"
                android:text="Next"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
