<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/kks_bg"
    android:orientation="horizontal"
    android:paddingBottom="30dp"
    android:paddingTop="30dp"
    android:weightSum="100">


    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="10">

            <com.an.customfontview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Registration Module"
                android:textColor="@color/colorAccent"
                app:textFontPath="fonts/tektonpro-bold.otf"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="8"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.an.customfontview.CustomButton
                        android:id="@+id/dlg_group"
                        android:layout_width="155dp"
                        android:layout_height="155dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/buttoncolor"
                        app:btnFontPath="fonts/tektonpro-bold.otf"
                        android:gravity="center"
                        android:text="GROUP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.an.customfontview.CustomButton
                        android:id="@+id/dlg_student"
                        android:layout_width="155dp"
                        android:layout_height="155dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/buttoncolor"
                        app:btnFontPath="fonts/tektonpro-bold.otf"
                        android:gravity="center"
                        android:text="STUDENT" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>